<h1>Profiles</h1>

<form class="searchProfiles" action="profiles">
  <input type="text" placeholder="Search.." name="searchProfiles">
  <button type="submit">Search<i class="searchProfilesBtn"></i></button>
</form>
<br>

<div>
<a href="/profiles/edit"><button>Create New Profile</button></a>
</div>


<div>
<ul>
  <% for (let i = 0; i < profiles.length; i++ ) {%>
  <li>
    <a href="/profiles/<%= profiles[i].id %>"><%= profiles[i].name %></a> | 
    <a href="/profiles/<%= profiles[i].id %>/delete"><button>Delete</button></a>
  </li>
  <% } %>
</ul>
</div>

